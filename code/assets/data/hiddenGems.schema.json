{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "HiddenGems",
    "description": "A collection of hidden gem locations in Northern California",
    "type": "object",
    "properties": {
      "gems": {
        "type": "array",
        "description": "Array of hidden gem locations",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "description": "Unique identifier for the gem"
            },
            "name": {
              "type": "string",
              "description": "Name of the location"
            },
            "type": {
              "type": "string",
              "description": "OSM element type (node, way, relation)"
            },
            "coordinates": {
              "type": "object",
              "properties": {
                "latitude": {
                  "type": "number",
                  "description": "Latitude coordinate"
                },
                "longitude": {
                  "type": "number",
                  "description": "Longitude coordinate"
                }
              },
              "required": ["latitude", "longitude"]
            },
            "category": {
              "type": "string",
              "description": "Primary category (leisure, amenity, natural, historic)"
            },
            "subCategory": {
              "type": "string",
              "description": "Specific subcategory (park, cafe, etc.)"
            },
            "popularity_score": {
              "type": ["number", "null"],
              "description": "Estimated popularity (lower = more hidden, null = undiscovered)"
            },
            "activities": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Activities available at this location"
            },
            "accessibility": {
              "type": "object",
              "properties": {
                "wheelchair": {
                  "type": ["boolean", "string", "null"],
                  "description": "Wheelchair accessibility (true, false, 'limited', or null if unknown)"
                },
                "parking": {
                  "type": ["boolean", "null"],
                  "description": "Available parking"
                },
                "public_transport": {
                  "type": ["boolean", "null"],
                  "description": "Accessible by public transportation"
                },
                "restrooms": {
                  "type": ["boolean", "null"],
                  "description": "Available restrooms"
                }
              }
            },
            "visit_duration": {
              "type": "string",
              "description": "Suggested visit duration"
            },
            "best_time": {
              "type": "string",
              "description": "Best time to visit"
            },
            "cost": {
              "type": "string",
              "description": "Cost indicator (free, $, $$, $$$)"
            },
            "region": {
              "type": "string",
              "description": "Region within Northern California"
            },
            "reviews": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "content": {
                    "type": "string",
                    "description": "Review text"
                  },
                  "rating": {
                    "type": "number",
                    "description": "Rating (1-5)"
                  },
                  "author": {
                    "type": "object",
                    "properties": {
                      "age_group": {
                        "type": "string"
                      },
                      "travel_style": {
                        "type": "string"
                      },
                      "travel_frequency": {
                        "type": "string"
                      }
                    }
                  },
                  "visit_date": {
                    "type": "string",
                    "description": "When the reviewer visited"
                  }
                },
                "required": ["content", "rating"]
              }
            },
            "tags": {
              "type": "object",
              "description": "Additional OSM tags and metadata",
              "additionalProperties": true
            }
          },
          "required": ["id", "coordinates", "name"]
        }
      },
      "metadata": {
        "type": "object",
        "properties": {
          "generated": {
            "type": "string",
            "format": "date-time",
            "description": "When this data was generated"
          },
          "bbox": {
            "type": "array",
            "items": {
              "type": "number"
            },
            "minItems": 4,
            "maxItems": 4,
            "description": "Bounding box as [min_lat, min_lon, max_lat, max_lon]"
          },
          "source": {
            "type": "string",
            "description": "Data source"
          }
        }
      }
    },
    "required": ["gems"]
  }